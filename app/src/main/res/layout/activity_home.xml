<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_brown"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/rounded_corner"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to Coffee Shop"
                    android:textSize="24sp"
                    android:textColor="@color/light_brown"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/weatherText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weather: Loading..."
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/rounded_corner"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â˜• Coffee Fact"
                    android:textSize="18sp"
                    android:textColor="@color/light_brown"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/coffeeFactText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading coffee fact..."
                    android:textSize="14sp"
                    android:textColor="#CCFFFFFF"
                    android:lineSpacingExtra="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/refreshFactButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Fact"
                    android:textSize="12sp"
                    android:layout_gravity="end"
                    android:backgroundTint="#8D6E63"
                    android:textColor="@color/light_brown"
                    android:layout_marginTop="8dp"
                    android:padding="8dp" />

            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:padding="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/card_background"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/coffee_default"
                            android:contentDescription="Browse Coffee"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/browseCoffeeButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Browse Coffee"
                            android:textSize="14sp"
                            android:backgroundTint="@color/light_brown"
                            android:textColor="@color/dark_brown" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/card_background"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_add_shopping_cart"
                            android:contentDescription="View Cart"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/viewCartButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="View Cart"
                            android:textSize="14sp"
                            android:backgroundTint="@color/light_brown"
                            android:textColor="@color/dark_brown" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/card_background"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_orders"
                            android:contentDescription="My Orders"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/viewOrdersButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="My Orders"
                            android:textSize="14sp"
                            android:backgroundTint="@color/light_brown"
                            android:textColor="@color/dark_brown" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/card_background"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_favouritefilled"
                            android:contentDescription="Favorites"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/viewFavoritesButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Favorites"
                            android:textSize="14sp"
                            android:backgroundTint="@color/light_brown"
                            android:textColor="@color/dark_brown" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/card_background"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_profile_picture"
                            android:contentDescription="Profile"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/viewProfileButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Profile"
                            android:textSize="14sp"
                            android:backgroundTint="@color/light_brown"
                            android:textColor="@color/dark_brown" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/developerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Hina Munir"
        android:textSize="14sp"
        android:textColor="@color/light_brown"
        android:fontFamily="sans-serif" />

</RelativeLayout>