<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:padding="16dp">

        <TextView
            android:id="@+id/orderIdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order #ABCD1234"
            android:textSize="16sp"
            android:textColor="@color/light_brown"
            android:fontFamily="sans-serif-bold" />

        <TextView
            android:id="@+id/orderDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dec 19, 2024"
            android:textSize="12sp"
            android:textColor="#CCFFFFFF"
            android:layout_below="@id/orderIdText"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/orderTotalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$25.99"
            android:textSize="18sp"
            android:textColor="@color/light_brown"
            android:fontFamily="sans-serif-bold"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/orderStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivered"
            android:textSize="12sp"
            android:textColor="#4CAF50"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/orderTotalText"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/orderItemsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 items â€¢ Cappuccino, Latte"
            android:textSize="14sp"
            android:textColor="#CCFFFFFF"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/orderDateText"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/orderItemsText"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/reorderButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reorder"
                android:textSize="14sp"
                android:backgroundTint="#8D6E63"
                android:textColor="@color/light_brown"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/trackButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Track"
                android:textSize="14sp"
                android:backgroundTint="@color/light_brown"
                android:textColor="@color/dark_brown"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:textSize="14sp"
                android:backgroundTint="#D32F2F"
                android:textColor="@android:color/white"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>